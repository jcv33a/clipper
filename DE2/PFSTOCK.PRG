*** INTROCLIENTES.PRG

PROCEDURE INTROCLIENTES

CLEAR

CONTINUAR=SPACE(1)
@0,0 SAY "¨QUIERE CONTINUAR? (N/S):" GET CONTINUAR
READ

IF CONTINUAR$"Ss"

        SET INDEX TO
        GO BOTTOM
        @2,0 SAY "ULTIMA REFERENCIA:" GET REF
        @3,0
        WAIT
        SET INDEX TO REF

        STORE "S" TO SIG
        DO WHILE SIG$"Ss"

                STORE "N" TO SIG

                APPEND BLANK

                CLEAR

                @0,0 SAY "ENTRADA AL FICHERO DE CLIENTES"
                @2,0 SAY "REFERENCIA" GET REF
                @3,0 SAY "NOMBRE" GET NOMBRE
                @4,0 SAY "PRIMER APELLIDO" GET APELLIDO1
                @5,0 SAY "SEGUNDO APELLIDO" GET APELLIDO2
                @6,0 SAY "FECHA" GET FECHA
                @7,0 SAY "DEBE" GET DEBE

                READ

                @9,0 SAY "¨QUIERE INTRODUCIR OTRA FICHA? (S/N): " GET SIG

                READ

        ENDDO

ENDIF

RETURN

*** LISACT.PRG

PROCEDURE LISACT

OPCION=SPACE(1)
IMPRIMIR=SPACE(1)

CLEAR
MOROSO=SPACE(5)
@0,0 SAY "REFERENCIA:" GET MOROSO
READ

SET INDEX TO REF

CLEAR

REPORT FORM LISACT FOR REF=MOROSO TO FILE LISACT.TXT
?
WAIT

CLEAR

@0,0 SAY "¨QUIERES IMPRIMIRLO? (N/S):" GET IMPRIMIR
READ

IF IMPRIMIR$"Ss"

        REPORT FORM LISACT FOR REF=MOROSO NOEJECT TO PRINT
        ?

ENDIF

CLEAR
WAIT
RETURN
